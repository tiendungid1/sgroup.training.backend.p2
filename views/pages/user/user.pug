extends ../../layout/private/user.layout.pug

block content
	.content-wrapper
		// Content Header (Page header)
		section.content-header
			.container-fluid
				.row.mb-2
					.col-sm-6
						h1 User Management
					.col-sm-6
						ol.breadcrumb.float-sm-right
							li.breadcrumb-item
								a(href='#') Home
							li.breadcrumb-item.active User			
			// /.container-fluid
		// Main content
		section.content
			.container-fluid
				.row
					.col-12
						.card
							.card-header
								h3.card-title User in system
							.select-action-form
								.form-check
									input#checkboxAll.form-check-input(type='checkbox' value='')
									label.form-check-label(for='checkboxAll') Select all
								select#selectAction.form-control.form-control-sm.checkbox-select-all-options(name='action' required='')
									option(value='') -- Select action --
									option(value='delete') Delete
								button.btn.btn-primary.btn-sm.check-all-submit-btn(disabled='') Submit
							// /.card-header
							.card-body
								table.table.table-bordered.table-hover
									thead
										tr
											th #
											th ID
											th Username
											th Fullname
											th Avatar
											th Status
											th Roles
											th Action
									tbody#user-table
							// /.card-body
					// /.col
				// /.row
			// /.container-fluid
		// /.content

block scripts
	script(src='/dist/js/user/user.js')